include ../blocks/mixins

block variables
  - var activePage = activePage

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        //[if IE]
        meta(http-equiv='X-UA-Compatible' content="IE = edge")

        meta(name="viewport" content="width=device-width,initial-scale=1 shrink-to-fit=no")
        meta(name="keywords" content="")

        //favicon
        link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
        link(rel="icon" href="favicon.ico" type="image/x-icon")

        // AOS css
        link(rel="stylesheet" type='text/css' href="https://unpkg.com/aos@2.3.1/dist/aos.css")

        link(rel="stylesheet" type='text/css' href="./assets/css/libs.min.css")
        link(rel="stylesheet" type='text/css' href="./assets/css/main.css")

        //[if lt IE 9]
        script(src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js")
        //[endif]

        // Анимация блока Гарантии
        script(type="text/javascript" src="https://unpkg.com/aatjs@0.0.3/dist/aat.min.js")
        // Input Mask
        script(type="text/javascript" src="https://unpkg.com/imask")
        //axios
        script(type="text/javascript" src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js")

        // AOS js
        script(type="text/javascript" src="https://unpkg.com/aos@2.3.1/dist/aos.js")

        // GSAP.min.js
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js")
        // ScrollTrigger.min.js
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js")



    body.body-noMain
        include ../blocks/header/header
        main.main
            block content
        include ../blocks/footer/footer
        include ../blocks/popup/popup
        include ../blocks/quiz/quiz
        include ../blocks/cursor/cursor
        #contacts
    script(src="./assets/scripts/libs.min.js")
    script(src="./assets/scripts/main.js" type="module")
    block script
